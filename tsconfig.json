{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "noEmit": true, // Do not emit output files
    "skipLibCheck": true, // Skip type checking of declaration files (*.d.ts)
    "isolatedModules": true, // Ensures that Babel can handle each file separately
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}